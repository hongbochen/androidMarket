<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mgrey" >

    <!-- 顶部标题栏 -->

    <RelativeLayout
        android:id="@+id/rl_theme_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/mbarcolor" >

        <TextView
            android:id="@+id/tv_hotapp_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="专题"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey" />

    <ListView
        android:id="@+id/theme_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/v_line"
        android:layout_below="@+id/rl_theme_title" 
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">
    </ListView>

</RelativeLayout>